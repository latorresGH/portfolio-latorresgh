---
// Importa las skills
import { Skills } from "../utils/skills/skillsList";

const duplicatedSkills = [...Skills, ...Skills]; // duplicamos para loop infinito
---

<div class="flex flex-col items-center font-Zaslia ">
  <div class="text-center mb-8 text-[#BD5B2D]">
    <p class="text-[3rem] m-0 leading-none">MIS</p>
    <p class="text-[8rem] m-0 leading-none">SKILLS</p>
  </div>
  
  <div class="max-w-[600px] w-full overflow-hidden mx-auto relative">
    <div class="relative">
      <div
        id="skills-scroll"
        class="flex cursor-grab select-none"
        style="width: max-content;"
        aria-hidden="true"
      >
        {duplicatedSkills.map(({ name, Icon }) => (
          <Icon
            class="w-16 h-16 mx-6 shrink-0"
            aria-label={name}
            role="img"
          />
        ))}
      </div>
      
      <!-- Shadow gradients -->
      <div class="absolute top-0 left-0 w-16 h-full bg-gradient-to-r from-[#0c0c0d] to-transparent pointer-events-none z-10"></div>
      <div class="absolute top-0 right-0 w-16 h-full bg-gradient-to-l from-[#0c0c0d] to-transparent pointer-events-none z-10"></div>
    </div>
  </div>
</div>

<script>
  import { SkillsCarousel } from '../utils/animations/infiniteScroll'
  
  // Inicializar el carousel
  new SkillsCarousel('#skills-scroll');
</script>